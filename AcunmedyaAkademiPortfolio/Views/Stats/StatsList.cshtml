@model List<AcunmedyaAkademiPortfolio.Models.TblStats>

@{
    ViewBag.Title = "StatsList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>İstatistikler</h3>

<table class="table table-bordered">


    <tr>
        <th>İstatistik Id</th>
        <th>İstatistik Adı</th>
        <th>İstatistik Sayısı</th>
        <th>İstatistik ikonu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.StatsId</td>
            <td>@item.StatsName</td>
            <td>@item.StatsNumber</td>
            <td><img src="@item.StatsEmoji"/></td>
            <td><a href="/Stats/DeleteStats/@item.StatsId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Stats/UpdateStats/@item.StatsId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Stats/CreateStats/" class="btn btn-primary">Yeni İstatistik Girişi</a>

