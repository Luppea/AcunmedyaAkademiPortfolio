
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Referans Ekleme</h2>
<form method="post">
    <label> Referans Id </label>
    <input type="text" class="form-control" name="TestimonialId" style="border:groove" />
    <br />
    <label> Referans Başlık </label>
    <input type="text" class="form-control" name="Title" style="border:groove" />
    <br />
    <label> Referans Adı-Soyadı  </label>
    <input type="text" class="form-control" name="NameSurname" style="border:groove" />
    <br />
    <label> Referans Açıklaması </label>
    <input type="text" class="form-control" name="CommentDetail" style="border:groove" />
    <br />
    <label> Referans Resmi </label>
    <input type="text" class="form-control" name="ImageUrl" style="border:groove" />
    <br />
    <button class="btn btn-info">Referansı Ekle</button>
</form>

