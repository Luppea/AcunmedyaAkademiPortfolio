@model List<AcunmedyaAkademiPortfolio.Models.TblProject>


<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Projelerimiz</h2>
        <p>Aşağıdan projelerimize ulaşabilirsiniz.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            
            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">Tümü</li>
                <li data-filter="">Web Projeleri</li>
                <li data-filter="*">Mobil Projeler</li>
                <li data-filter="*">Oyun Projeleri</li>
            </ul>
            
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app-@item.CategoryId">
                        <img src="@item.ImageUrl" class="img-fluid" alt="@item.ProjectTitle">
                        <div class="portfolio-info">
                            <h4>@item.ProjectTitle</h4>
                            <p>@item.Description</p>
                            <a href="@item.ImageUrl" style="width:250px;height:500px;" title="@item.ProjectTitle" data-gallery="portfolio-gallery-@item.CategoryId" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            <a href="portfolio-details.html" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                        </div>
                    </div>
                }


            </div>

        </div>

    </div>

</section><!-- /Portfolio Section -->
